{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Update Go Dependencies",
      "matchManagers": [
        "gomod"
      ],
      "schedule": [
        "at any time"
      ]
    },
    {
      "description": "Update Docker Dependencies",
      "matchManagers": [
        "dockerfile"
      ],
      "schedule": [
        "at any time"
      ]
    },
    {
      "description": "Update Homebrew Dependencies",
      "matchManagers": [
        "homebrew"
      ],
      "schedule": [
        "at any time"
      ]
    }
  ]
}
